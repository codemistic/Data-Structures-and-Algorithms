#include<iostream>
using namespace std;
int main(){
    int n;
    cin>>n;

    for(int i=1;i<=n;i++){
        for(int j=1;j<=n-i;j++){
            cout<<" ";     
        }
        int k,j=i;
        for(;j<=n;j--){
            cout<<k;
        }

        
        for(;j<=n+i;j++){
            cout<<k;
        }
        cout<<endl;
        
    }
    cout<<endl;
}
