#include<iostream>
using namespace std;
int main(){
    int num;
    bool flag = 0;
    cout<<"enter the number :- ";
    cin>> num;
    for(int i=2;i<num;i++){
        if(num%i == 0){
            cout<<num<<" is a non prime number"<<endl;
            flag = 1;

            break;

        }
    }

    if(flag==0){
        cout<<num<<" is a prime number"<<endl;
    }
}
